<div class="card row d-flex flex-row h-90">
  <div class="col-4 profile-photo">
    <img src="{{ user.image }}" class="card-img-top" alt="...">
  </div>
  <div class="col-8 profile-info">
    <h4 class="card-title m-4">{{ user.name }}</h4>
    <h5 class="card-title m-4">{{ user.email }}</h5>
    <h5 class="card-title m-4"> {{comments.count}} 已評論餐廳</h5>
    <h5 class="card-title m-4"> {{user.favoritedCount}} 已收藏餐廳</h5>
    <h5 class="card-title m-4"> {{user.followingsCount}} followings (追蹤者)</h5>
    <h5 class="card-title m-4"> {{user.followersCount}} followers (追隨者)</h5>
    <a href="/users/{{ user.id }}/edit" class="btn btn-primary m-4">Edit</a>
  </div>
</div>
{{!-- 第一行 --}}
<div class="d-flex flex-row">
  {{!-- 左邊 1/3 --}}
  <div class="card col-4 h-90 mt-3 p-2">
    <div class="comment-counts">
      <p class="bg-secondary-subtle"> {{user.followingsCount}} followings (追蹤者) </p>
    </div>
    <div class="row d-flex flex-row ">
      {{#each user.Followings}}
        <div class="col-2">
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="" class="img-fluid rounded" style="width: 50px; height: 50px;">
          </a>
        </div>
      {{/each}}
    </div>
  </div>

  {{!-- 右邊 2/3 --}}
  <div class="card col-8 h-90 mt-3 p-2">
    <div class="comment-counts">
      <p class="bg-secondary-subtle"> {{comments.count}} 已評論餐廳 </p>
    </div>
    <div class="row d-flex flex-row ">
      {{#each comments.rows}}
        <div class="col-1">
          <a href="/restaurants/{{this.restaurantId}}">
            <img src="{{this.Restaurant.image}}" alt="" class="img-fluid rounded">
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</div>

{{!-- 第二行 --}}
<div class="d-flex flex-row">
  {{!-- 左邊 1/3 --}}
  <div class="card col-4 h-90 mt-3 p-2">
